	<security:http pattern="/user/**" auto-config="true" disable-url-rewriting="true" use-expressions="true">
    <security:intercept-url pattern="/user/*" access="hasRole('ROLE_USER')" />
	<security:intercept-url pattern="/"
			access="permitAll" />
    <security:logout logout-success-url="/user/logout"
        logout-url="/user/logout"
        invalidate-session="true" />

    <security:form-login login-page="/loginuser" 
        default-target-url="/user/loginSuccess"
        login-processing-url="/loginuser"></security:form-login>
</security:http>


<security:http pattern="/com/**" auto-config="true" disable-url-rewriting="true" use-expressions="true">
    <security:intercept-url pattern="/com/*" access="hasRole('ROLE_COM')" />
	<security:intercept-url pattern="/"
			access="permitAll" />
    <security:logout logout-success-url="/com/logout" 
        logout-url="/com/logout"
        invalidate-session="true" />

    <security:form-login login-page="/com/login" 
        default-target-url="/com/loginSuccess"
        login-processing-url="/com/login"/>
</security:http>


	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref="customUserDetailsService">
			<security:password-encoder
				ref="bcryptPasswordEncoder" />
		</security:authentication-provider>

	</security:authentication-manager>
	<context:annotation-config>
		<context:component-scan
			base-package="com.StudyDamoyeo.service"></context:component-scan>
		<context:component-scan
